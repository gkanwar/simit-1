element Point
  b : float;
  c : float;
end

element Link
  a : float;
end

extern points : set{Point};
extern springs : lattice[1]{Link}(points);

func vonNeumann(g00 : Point,
                l : lattice[1]{Link}(points),
                g : set{Point})
    -> (vnMat : tensor[points,points](float))
    vnMat(g00,g00) = l[0;1].a + l[0;-1].a;
    vnMat(g00,g[1]) = l[0;1].a;
    vnMat(g00,g[-1]) = l[0;-1].a;
end

proc main
  B = map vonNeumann to points through springs;
  points.c = B*points.b;
end